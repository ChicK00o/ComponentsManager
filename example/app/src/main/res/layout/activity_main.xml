<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:simpleApplication="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        simpleApplication:layout_constraintBottom_toTopOf="@+id/navigation"
        simpleApplication:layout_constraintEnd_toEndOf="parent"
        simpleApplication:layout_constraintStart_toStartOf="parent"
        simpleApplication:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        simpleApplication:layout_constraintBottom_toBottomOf="parent"
        simpleApplication:layout_constraintLeft_toLeftOf="parent"
        simpleApplication:layout_constraintRight_toRightOf="parent"
        simpleApplication:menu="@menu/navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>